{
  "name": "camofox-browser",
  "version": "1.8.1",
  "description": "Anti-detection browser server for AI agents â€” REST API wrapping Camoufox engine with OpenClaw plugin support",
  "type": "commonjs",
  "main": "dist/src/server.js",
  "bin": {
    "camofox-browser": "bin/camofox-browser.js"
  },
  "license": "MIT",
  "author": "redf0x1",
  "homepage": "https://github.com/redf0x1/camofox-browser#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/redf0x1/camofox-browser.git"
  },
  "bugs": {
    "url": "https://github.com/redf0x1/camofox-browser/issues"
  },
  "keywords": [
    "camofox",
    "camoufox",
    "anti-detection",
    "browser-automation",
    "ai-agent",
    "stealth-browser",
